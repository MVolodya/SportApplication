<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rate_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="false">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/rate_fragment_refresh"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/rate_h"
            android:background="@drawable/football_stadium">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/back_arrow_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/arrow_padding_l"
                    android:paddingTop="@dimen/arrow_padding_r"
                    android:src="@drawable/ic_arrow_back_white_24dp" />

                <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/home_team_iv"
                    android:layout_width="@dimen/team_logo_w"
                    android:layout_height="@dimen/team_logo_h"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/score_tv"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/away_team_iv"
                    android:layout_width="@dimen/team_logo_w"
                    android:layout_height="@dimen/team_logo_h"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/round_tv"
                    android:layout_marginEnd="35dp"
                    android:layout_marginRight="35dp" />

                <TextView
                    android:id="@+id/round_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/home_team_iv"
                    android:gravity="center_horizontal"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/match_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/time_tv"
                    android:gravity="center_horizontal"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/home_team_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/home_team_iv"
                    android:layout_below="@+id/away_team_iv"
                    android:layout_marginLeft="40dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLength="20"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/away_team_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/away_team_iv"
                    android:layout_below="@+id/away_team_iv"
                    android:layout_marginRight="40dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLength="20"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/coff_w1_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/coff_d_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/coff_w2_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/score_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/round_tv"
                    android:gravity="center_horizontal"
                    android:text=" - "
                    android:textColor="#fff"
                    android:textSize="45sp" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/rate_tab_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rate_fragment_refresh">

        <android.support.design.widget.TabLayout
            android:id="@+id/match_rate_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#628f3e"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:tabGravity="fill"
            app:tabMode="fixed" />

        <info.androidhive.firebase.classes.utils.CustomViewPager
            android:id="@+id/rate_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/match_rate_tabs" />

    </RelativeLayout>
</RelativeLayout>