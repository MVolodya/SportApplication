<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refreshLeagueFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.leagueFragment.LeagueFragment">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/league_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scrollbars="vertical" />

        <ImageView
            android:id="@+id/msg_wait_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/stopwatch" />

        <TextView
            android:id="@+id/limit_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg_wait_iv"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@string/roboto_regular"
            android:gravity="center_horizontal"
            android:text="@string/wait_sec"
            android:textSize="@dimen/material_text_body1" />
    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>
