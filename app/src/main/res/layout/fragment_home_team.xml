<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.homeTeamFragment.HomeTeamFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_team_players_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/sorry_the_api_developer_is_fool"
        android:textColor="#628f3e"
        android:textSize="15sp"
        android:id="@+id/home_msg_tv"
        android:layout_gravity="center" />

</FrameLayout>
