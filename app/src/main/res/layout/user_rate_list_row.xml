<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="2dp"
        app:rippleColor="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/home_team_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif"
                android:textColor="@color/dark"
                android:textSize="@dimen/material_text_subhead" />

            <TextView
                android:id="@+id/hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/home_team_tv"
                android:layout_toRightOf="@+id/home_team_tv"
                android:fontFamily="sans-serif"
                android:maxLength="10"
                android:text=" - "
                android:textColor="@color/dark"
                android:textSize="@dimen/material_text_subhead" />

            <TextView
                android:id="@+id/away_team_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/hint_tv"
                android:layout_toRightOf="@+id/hint_tv"
                android:fontFamily="sans-serif"
                android:textColor="@color/dark"
                android:textSize="@dimen/material_text_subhead" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_team_tv"
                android:layout_toLeftOf="@+id/max_win_points"
                android:layout_toStartOf="@+id/max_win_points"
                android:fontFamily="sans-serif"
                android:textColor="@color/dark"
                android:textSize="@dimen/material_text_subhead">

                <TextView
                    android:id="@+id/rate_hint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:fontFamily="sans-serif"
                    android:text="@string/rate"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/material_text_subhead" />

                <TextView
                    android:id="@+id/bet_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/rate_hint_tv"
                    android:layout_toEndOf="@+id/rate_hint_tv"
                    android:layout_toRightOf="@+id/rate_hint_tv"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/material_text_subhead"

                    />

                <TextView
                    android:id="@+id/can_win_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="sans-serif"
                    android:text="@string/you_can_win"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/material_text_subhead" />
            </RelativeLayout>

            <TextView
                android:id="@+id/max_win_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/relativeLayout"
                android:fontFamily="sans-serif"
                android:textColor="@color/dark"
                android:textSize="@dimen/material_text_subhead" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>