<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <TextView
                android:id="@+id/rated_home_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif"
                android:textColor="@color/dark"
                android:textSize="@dimen/material_text_subhead"/>

            <TextView
                android:id="@+id/textViewScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/rated_home_team"
                android:layout_toRightOf="@+id/rated_home_team"
                android:fontFamily="sans-serif"
                android:maxLength="10"
                android:text=" - "
                android:textColor="@color/dark"
                android:textSize="@dimen/material_text_subhead" />

            <TextView
                android:id="@+id/rated_away_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textViewScore"
                android:layout_toRightOf="@+id/textViewScore"
                android:fontFamily="sans-serif"
                android:textColor="@color/dark"
                android:textSize="@dimen/material_text_subhead"
                />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rated_home_team"
                android:layout_toLeftOf="@+id/ratedPoints"
                android:layout_toStartOf="@+id/ratedPoints"
                android:fontFamily="sans-serif"
                android:textColor="@color/dark"
                android:textSize="@dimen/material_text_subhead">

                <TextView
                    android:id="@+id/r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:fontFamily="sans-serif"
                    android:text="@string/rate"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/material_text_subhead"
                  />

                <TextView
                    android:id="@+id/ratedType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/r"
                    android:layout_toEndOf="@+id/r"
                    android:layout_toRightOf="@+id/r"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/material_text_subhead"

                  />

                <TextView
                    android:id="@+id/rP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="sans-serif"
                    android:text="@string/you_can_win"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/material_text_subhead"
                 />
            </RelativeLayout>

            <TextView
                android:id="@+id/ratedPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/relativeLayout"
                android:fontFamily="sans-serif"
                android:textColor="@color/dark"
                android:textSize="@dimen/material_text_subhead"
               />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>