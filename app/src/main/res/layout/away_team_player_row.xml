<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/margin_16dp"
    android:paddingRight="@dimen/margin_16dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/player_image_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_account_circle_black_36dp"
        android:tint="@color/status_bar" />

    <TextView
        android:id="@+id/player_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@string/roboto_regular"
        android:textColor="@color/dark"
        android:textSize="@dimen/material_text_subhead" />

    <LinearLayout
        android:id="@+id/player_data_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_name_tv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/player_hint_year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:fontFamily="@string/roboto_regular"
                android:text="@string/birthday"
                android:textSize="@dimen/material_text_body1" />

            <TextView
                android:id="@+id/player_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@string/roboto_regular"
                android:textSize="@dimen/material_text_body1" />

            <TextView
                android:id="@+id/player_year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/player_hint_year_tv"
                android:layout_toRightOf="@+id/player_hint_year_tv"
                android:fontFamily="@string/roboto_regular"
                android:textSize="@dimen/material_text_body1" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nationality_lan_lay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/player_data_linear_layout"
        android:layout_marginLeft="72dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/player_nationality_hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/roboto_regular"
                android:text="@string/nationality"
                android:textSize="@dimen/material_text_body1" />

            <TextView
                android:id="@+id/player_nationality_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/player_nationality_hint_tv"
                android:layout_toRightOf="@+id/player_nationality_hint_tv"
                android:fontFamily="@string/roboto_regular"
                android:maxLength="11"
                android:textSize="@dimen/material_text_body1" />

            <TextView
                android:id="@+id/player_position_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:fontFamily="@string/roboto_regular"
                android:maxLength="11"
                android:textSize="@dimen/material_text_body1" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
